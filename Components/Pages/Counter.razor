@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Add</button>

<button class="btn btn-primary" @onclick="SubtractCount">Subtract</button>

<button class="btn btn-primary" @onclick="Timer">Start</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void SubtractCount()
    {
        currentCount--;
    }

    private async void Timer()
    {
        while(currentCount >= 0)
        {
            await Task.Delay(500);
            currentCount--;
        }
    }
}
